<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2E388"
    tools:context=".activities.UserProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/userProfileToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4B378E"
        app:titleTextColor="#D2E388"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/visitUserProfileImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profileimage"
        android:layout_marginTop="110dp"/>

    <TextView
        android:id="@+id/visitUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:layout_below="@id/visitUserProfileImage"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#4B378E"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/visitUserStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Status"
        android:layout_below="@id/visitUserName"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="25sp"
        android:textColor="#4B378E"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/sendMessageRequestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/visitUserStatus"
        android:layout_marginTop="15dp"
        android:text="Send Friend Request"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:textStyle="bold"
        android:background="@drawable/stylerounded"
        android:textColor="#0D193D"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"/>

    <Button
        android:id="@+id/declineMessageRequestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendMessageRequestButton"
        android:layout_marginTop="15dp"
        android:text="Cancel Friend Request"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:textStyle="bold"
        android:background="@drawable/stylerounded"
        android:textColor="#0D193D"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:visibility="invisible"/>

</RelativeLayout>